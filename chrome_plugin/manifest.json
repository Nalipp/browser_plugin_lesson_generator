{
  "manifest_version": 3,
  "name": "English Lesson Plan Generator",
  "version": "1.0",
  "description": "Scrape web content and generate English lesson plans",
  "permissions": ["activeTab", "storage", "scripting"],
  "externally_connectable": {
    "matches": ["https://browser-plugin-lesson-generator.onrender.com/*"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
